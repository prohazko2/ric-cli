{
    "compilerOptions": {
      "outDir": "dist",
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "module": "CommonJS",
      "target": "ES2020",
      "lib": ["es5", "es6", "es2015.promise", "es2017", "es2019", "es2020"],
      "allowJs": true,
      "baseUrl": "."
    },
    "include": [
      "index.ts",
      "bin/**/*.ts",
      "modules/**/*.ts",
      "types/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "public"
    ]
  }
  